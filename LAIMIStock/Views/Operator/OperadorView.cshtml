﻿@model LAIMIStock.Models.Suministros
@{
    if (Convert.ToInt32(Session["usuarioID"]) != 2)
    {
        Response.Redirect("~/Login/Index");
    }
    ViewBag.Title = "Operador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-left: 6%;">
    <h3>Consumir suministro</h3>
    @using (Html.BeginForm("UseSupply", "Operator", FormMethod.Post))
    {
        <label for="supplies-dropdown">Suministro</label>
        @Html.DropDownListFor(m => m.selectedSupply, Model.supplies, "Seleccione un suministro", new { @class = "form-control", onchange = @"
                                                                                                                    var from = document.forms[0];
                                                                                                                    form.action = 'OperadorView';
                                                                                                                    form.submit();" })
        <br>
        <p>La cantidad actual es de:</p><p style="font-size: 18px;">@Model.cantidad</p>
        @Html.Raw(TempData["msg"])

        <input type="submit" value="Consumir" class="btn btn-primary" />

        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }
</div>
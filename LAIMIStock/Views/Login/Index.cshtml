﻿@model LAIMIStock.Models.Usuarios
@{
    ViewBag.Title = "Index";
}

@{
    if (Session["usuarioID"] != null)
    {
        Response.Redirect("~/Home");
    }
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>LAIMI - Sistema de Inventario</title>
    <link rel="stylesheet" href="~/Content/css/loginStyle.css">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css"
          rel="stylesheet" type='text/css'>
</head>
<body>



    @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
    {
        <div class="container">
            <form className="login-form">
                <h1 class="sign-in--title">Inicio de Sesión</h1>
                <div class="form-input">

                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { placeholder = "Usuario" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.nombre)

                </div>


                <div class="form-input">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { placeholder = "Contraseña" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.password)

                </div>

                <div class="group">
                    <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                </div>

                <button type="submit" class="btn-login">
                    ENTRAR
                    <div class="ripples buttonRipples"><span class="ripplesCircle"></span></div>
                </button>
            </form>
        </div>

        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>


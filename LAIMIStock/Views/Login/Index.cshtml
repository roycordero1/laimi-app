@model LAIMIStock.Models.Usuarios
@{
    ViewBag.Title = "Index";
}

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>LAIMI - Sistema de Inventario</title>



    <link rel="stylesheet" href="~/Content/loginStyle.css">

</head>
<body>
    
    
<hgroup>
    <h1>LAIMI</h1>
    <h3>Sistema de Inventario</h3>
</hgroup>
@using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
{
    <form>


        <div class="group">
            @Html.EditorFor(model => model.nombre)
            @Html.ValidationMessageFor(model => model.nombre)
            <!--
            <input type="text"><span class="highlight"></span><span class="bar"></span>
            -->
            <label>Usuario</label>

        </div>


        <div class="group">
            @Html.EditorFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
            <!--
            <input type="password"><span class="highlight"></span><span class="bar"></span>
            -->
            <label>Contraseña</label>   

        </div>

        <div class="group">
            <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
        </div>

        <button type="submit" class="button buttonBlue">
            Entrar
            <div class="ripples buttonRipples"><span class="ripplesCircle"></span></div>
        </button>
    </form>

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Scripts/loginIndex.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
</body>
</html>

